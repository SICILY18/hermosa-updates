container_commands:
  01_install_composer:
    command: "curl -sS https://getcomposer.org/installer | php -- --install-dir=/usr/local/bin --filename=composer"
    ignoreErrors: false
  02_composer_install:
    command: "composer install --no-dev --optimize-autoloader --no-interaction"
    cwd: "/var/app/staging"
  03_laravel_optimize:
    command: "php artisan config:cache && php artisan route:cache && php artisan view:cache"
    cwd: "/var/app/staging"
    ignoreErrors: true
  04_set_permissions:
    command: "chmod -R 755 storage bootstrap/cache"
    cwd: "/var/app/staging" 